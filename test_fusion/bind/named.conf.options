options {
    directory "/var/cache/bind";

    // Forwarders pour les requêtes externes
    forwarders {
        8.8.8.8;
        8.8.4.4;
    };

    // Autoriser les requêtes de tous les clients
    allow-query { any; };

    // Conformité avec RFC1035
    auth-nxdomain no;

    // Écouter sur toutes les interfaces (IPv4 et IPv6)
    listen-on { any; };
    listen-on-v6 { any; };

    // Activer la récursivité pour les clients
    recursion yes;
};
