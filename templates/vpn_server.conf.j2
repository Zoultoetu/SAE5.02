port 1194
proto udp
dev tun
ca ca.crt
cert {{ vpn_cert }}
key {{ vpn_key }}
dh dh.pem
server 192.168.0.0 255.255.255.0
push "route 192.168.0.0 255.255.255.0"
push "dhcp-option DNS 192.168.0.2"
keepalive 10 120
cipher AES-256-CBC
user nobody
group nogroup
persist-key
persist-tun
status openvpn-status.log
verb 3
