options {
    directory "/var/cache/bind";

    forwarders {
         8.8.8.8;
         8.8.4.4;
    };

    auth-nxdomain no;
    listen-on-v6 { any; };
    recursion yes;
    listen-on { any; };  # Accepter les connexions sur toutes les interfaces
    allow-query { any; };  # Autoriser toutes les requÃªtes
};
logging {
    channel default_debug {
        file "/var/log/named.debug.log";
        severity dynamic;
    };
};
